{
	"latex-workshop.latex.outDir": "%DIR%/build",
  "latex-workshop.latex.autoBuild.onSave.enabled": true,
	"latex-workshop.latex.autoBuild.recipe": "lualatexmk",
	
	"latex-workshop.latex.tools": [
		{
			"name": "lualatexmk",
      "command": "latexmk",
      "args": [
				"-lualatex",
				"-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
				"-halt-on-error",
				"--shell-escape",
        "-outdir=%OUTDIR%",
        "%DOC%"
			]
		},
		{
			"name": "latexmk_clean",
      "command": "latexmk",
      "args": [
				"-C",
        "-outdir=%OUTDIR%",
				"%DOC%"
			]
    }
	],
	"latex-workshop.latex.recipes": [
		{
			"name": "Make PDF",
      "tools": [
				"lualatexmk"
			]
		},
		{
      "name": "Clean Project",
      "tools": [
        "latexmk_clean"
			]
    }
	],
}